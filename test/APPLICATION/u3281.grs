NUMBER /D1,H1,D2,H2,DR1,HD1
ENTITY/YZ1,YZ2,RE1,edge(100),YZZ1,YZ3


L20:
	PARAM/'酒杯的直径','酒杯的直径',D1,$
	'酒杯杯体高度',H1,RESPOND


JUMP/L20:,STOP:,,RESPOND
YZ1=SOLCYL/ORIGIN,0,0,H,HEIGHT,H1,DIAMTR,D1,IFERR,STOP:



L30:
	PARAM/'杯腰的直径','杯腰的直径',D2,$
	'酒杯腰的高度',H2,RESPOND
        IF/D2>=D1,JUMP/L30:

JUMP/L30:,STOP:,,RESPOND
YZ2=SOLCYL/ORIGIN,0,0,H,HEIGHT,-H2,DIAMTR,D2,IFERR,STOP:


DR1=(D1-D2)/2.5

RE1=POINT/(D1/2),0,0

BLEND/YZ1,RADIUS,DR1,RE1
delete/RE1





L50:
	PARAM/'杯子厚度','杯子厚度',HD1,RESPOND
        IF/HD1>=(D1/2),JUMP/L50:

JUMP/L50:,STOP:,,RESPOND

YZ3=SOLCYL/ORIGIN,0,0,DR1,HEIGHT,H1,DIAMTR,(D1-HD1),IFERR,STOP:

SUBTRA/YZ1,WITH,YZ3

L40:
	PARAM/'杯脚的高度','杯脚的高度',H3,RESPOND

        IF/H3>=H2,JUMP/L40:

JUMP/L40:,STOP:,,RESPOND
YZZ1=SOLCON/ORIGIN,0,0,-H2,HEIGHT,H3,DIAMTR,D1,0,IFERR,STOP:


UNITE/YZ2,WITH,YZZ1




STOP:
HALT