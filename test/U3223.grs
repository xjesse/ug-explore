NUMBER /L,W,H,DH,HL,HW,MATRI(12),MAT(12),I,DHR,LEN,NUM,J
ENTITY/PT1,B1,CY1,CY2,CY3,CY4,CY5,CY6,CYY(1000)

L20:
	PARAM/'输入圆柱体的直径','直径',DR,$
	'高度',DH,RESPOND
JUMP/L20:,STOP:,,RESPOND
IF/DR<0,JUMP/L20:
CY1=SOLCYL/ORIGIN,0,0,H,HEIGHT,DH,DIAMTR,DR,IFERR,STOP:

L10:
	PARAM/'输入长方体的长宽高','长',L,$
	'宽',W,$
	'高',H,RESPOND
JUMP/L10:,STOP:,,RESPOND
IF/L<0 OR W<0 OR H<0,JUMP/L10:
B1=SOLBLK/ORIGIN,-0.5*L,-0.5*W,0,SIZE,L,W,H,IFERR,STOP:

L30:
	PARAM/'输入孔的参数','直径',HR,$
	'水平距离',HL,$
	'垂直距离',HW,RESPOND
JUMP/L30:,STOP:,,RESPOND
IF/HL<HR OR HW<HR OR HW+HR>DR OR HL+HR>DR,JUMP/L30: 
CY2=SOLCYL/ORIGIN,-0.5*HL,-0.5*HW,0,HEIGHT,H,DIAMTR,HR,IFERR,STOP:
MATRI=MATRIX/TRANSL,0,HW,0
CY3=TRANSF/MATRI,CY2
MATRI=MATRIX/TRANSL,HL,0,0
CY4=TRANSF/MATRI,CY2
MATRI=MATRIX/TRANSL,HL,HW,0
CY5=TRANSF/MATRI,CY2

L40:
	PARAM/'输入孔的参数','直径',DHR,$
	'距圆心距离',LEN,$
	'个数',NUM,RESPOND



CYY(1)=SOLCYL/ORIGIN,LEN,O,0,HEIGHT,H,DIAMTR,DHR,IFERR,STOP:


MAT=MATRIX/XYROT,360/NUM
DO/label:,I,1,NUM-1,1

CYY(I+1)=TRANSF/MAT,CYY(I)
label:

DO/label2:,J,1,NUM,1
SUBTRA/CY1,WITH,CYY(J)
label2:


PRINT/I
SUBTRA/CY1,WITH,CY2,CY3,CY4,CY5
UNITE/B1,WITH,CY1
STOP:
HALT